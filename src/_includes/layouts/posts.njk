---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# This is the template for the Posts page–it lists the posts in the collection #}

<div class="wrapper home">
  <div class="content">
    {{ content | safe }}
    <ul>
      {%- for post in collections.posts -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %}><div class="11ty-post">{{ post.data.page.date | htmlDateString2 }} — <a href='{{ post.url }}'>{{ post.data.title }}</a></div></li>
      {%- endfor -%}
    </ul>
  </div>
</div>